{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="d-flex flex-column justify-content-center align-items-center te-form te-shadow te-form-m w-75">

            <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>
            <div class="w-75">
            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div class="d-flex justify-content-center">
                <button class="btn btn-lg te-btn w-50 mt-3">Reset password</button>
            </div>
            {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
