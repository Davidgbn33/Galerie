{% extends 'base.html.twig' %}

{% block title %}Toiles et Papiers{% endblock %}

{% block body %}
    <div class="te-admin-grid">
    <aside class="te-admin-aside">
        <div class="te-admin-aside-content d-flex flex-column">
            <a class="te-font-text mt-3" href="/admin"> Liste des oeuvres</a>
            <a class="te-font-text" href="/admin/new">Nouvelle oeuvre</a>
            <a class="te-font-text" href="/admin_cat/category">Liste des catégories</a>
            <a class="te-font-text" href="/admin_cat/category/new">Nouvelle catégorie</a>
        </div>
    </aside>
    <main class="te-admin-main d-flex justify-content-center flex-column">
        <h1 class="text-center fs-2 mt-3">Liste des oeuvres</h1>
        <div class="container mt-3">
            <div class="">
                <table class="table">
                    <thead>
                    <tr>
                        <th  class="te-col-name">Nom du tableau</th>
                        <th  class="te-col-desc">description</th>
                        <th  class="te-col-taille">taille</th>
                        <th  class="te-col-tableau">Tableau</th>
                        <th  class="te-col-inspi">Inspiration</th>
                        <th  class="te-col-taille">Modifier</th>
                        <th  class="te-col-taille">Supprimer</th>
                        <th  class="te-col-taille">image</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for paint in paints %}
                        <tr>
                            <td class="te-col-name">{{ paint.paintName }}</td>
                            <td class="te-col-desc">{{ paint.description }}</td>
                            <td class="te-col-taille">{{ paint.taille }}</td>
                            <td class="te-col-tableau">{{ paint.paintImage }}</td>
                            <td class="te-col-inspi">{{ paint.inspiration }}</td>
                            <td class="te-col-modify"><a href="{{ path('adminedit',{ id: paint.id}) }}"><i class="fa-regular fa-pen-to-square" style="color: #1b1a21;"></i></a></td>
                            <td class="te-col-modify">{{ include('admin/_delete.html.twig') }}</td>
                            <td class="te-col-inspi"><img class="te-admin-show-img" src="{{ asset('uploads/images/paint/') }}{{ paint.paintImage }}"
                                                          alt="{{ paint.paintImage }}"</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}